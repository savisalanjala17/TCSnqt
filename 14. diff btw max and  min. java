import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        int n = sc.nextInt();
        int a[] =  new int[n];
        for(int i=0; i<n; i++){
            a[i]=sc.nextInt();
        }
        
        int j=n-2;
        int largest=a[n-1];
        int diff=0;
        
        while(j>=0){
            
            if(largest < a[j]){
                
                largest=a[j];
                
            }
            
            else{
                
                diff=Math.max(largest-a[j],diff);
            }
            
            j--;
            
        }
        
        System.out.print(diff);
    }
}


int largest = a[n - 1];
int diff = 0;

for(int i = n - 2; i >= 0; i--) {
    if(a[i] > largest) {
        largest = a[i];
    } else {
        diff = Math.max(diff, largest - a[i]);
    }
}
